{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "article_id": "1",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6,
          "article_img_url": "https://exampleURL"
        }
      ]
    }
  },
  "GET /api/articles/article_id": {
    "description": "serves an individual article by ID",
    "queries": [],
    "exampleResponse": {
      "article_id": "number in URL parameters",
      "title":"Seafood substitutions are increasing",
      "topic": "cooking",
      "author": "weegembump",
      "body": "Text from the article..",
      "created_at": "2018-05-30T15:59:13.341Z",
      "votes": 0,
      "comment_count": 6
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments for given article_id",
    "queries": ["author", "article_id", "sort_by"],
    "exampleResponse": {
      "body":"Text from the comment",
      "votes": 0,
      "author": "weegembump",
      "article_id": "number in URL parameters",
      "created_at": "2018-05-30T15:59:13.341Z",
      "comment_id": 1
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "serves comment from author",
    "queries": [],
    "exampleResponse": {
      "author": "username",
      "body": "comment"
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "serves updated article",
    "queries": [],
    "exampleResponse": {
      "article_id": "number in URL parameters",
      "title":"Seafood substitutions are increasing",
      "topic": "cooking",
      "author": "weegembump",
      "body": "Text from the article..",
      "created_at": "2018-05-30T15:59:13.341Z",
      "votes": 101,
      "comment_count": 6
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "removes comment by id, serves nothing",
    "queries": []
  },
  "GET /api/users": {
    "description":"serves an array of all users",
    "queries": ["username", "name", "user_id", "sort_by"],
    "exampleResponse": {
      "username": "user1",
      "name": "name1",
      "avatar_url": "URL to a picture file, their avatar"
    }
  },
  "GET /api/articles?topic=EXAMPLE": {
    "description": "serves an array of all articles under topic",
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "EXAMPLE",
          "author": "weegembump",
          "article_id": "1",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://exampleURL"
        }
      ]
    }
  }
}
